{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "outDir": "dist",
    "types": ["node"],
    "paths": {
      "@/*": ["./src/*"] // map imports that start with @/ to src/
    }
  },
  "include": ["src/**/*"]
}
